{
	"compilerOptions": {
		"module": "ES2015",
		"target": "ES2017",
		"sourceMap": true,
		"outDir": "assets/scripts",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"paths": {
		  "@/*": ["./scripts/*"]
		}
	},
	"include": ["scripts/**/*"],
	"exclude": ["node_modules"]
}