{
	"compilerOptions": {
		"module": "ES2015",
		"target": "ES2017",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"paths": {
		  "@/*": ["./src/scripts/*"],
		  "@styles/*": ["./src/styles/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}